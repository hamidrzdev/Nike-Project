<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hamiddev.nikeshop.custom.NikeImageView
        android:id="@+id/nikeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/productTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="?textAppearanceBody1"
        android:layout_alignTop="@id/nikeImageView"
        android:layout_alignBottom="@id/nikeImageView"
        android:gravity="center_vertical|right"
        android:layout_toRightOf="@id/nikeImageView"
        android:layout_alignParentRight="true"
        tools:text="محصول داخل لیست علاقه مندی" />

</RelativeLayout>


